<h1>Listing workers</h1>

<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Password digest</th>
    <th>Employer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workers.each do |worker| %>
  <tr>
    <td><%= worker.fname %></td>
    <td><%= worker.lname %></td>
    <td><%= worker.email %></td>
    <td><%= worker.phone %></td>
    <td><%= worker.password_digest %></td>
    <td><%= worker.employer_id %></td>
    <td><%= link_to 'Show', worker %></td>
    <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
    <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


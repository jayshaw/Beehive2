<h1>Job Listings</h1>

  <%= form_tag jobs_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
 <% end %>

<% @jobs.each do |job| %>

  <ul>
    <li><%= job.description %></li>
    <li><%= job.duration %></li>
    <li><%= job.payment %></li>
  </ul>
<% end %>
    <%= form_tag logins_path do %>
     <%= text_field_tag :email, nil, :placeholder => 'EMAIL',:class => "newuserinput" %>
  
     <%= password_field_tag :password, nil, :placeholder => 'PASSWORD',:class => "newuserinput"%></br>
  
     <%= submit_tag "Log In", :class => "newuserinput" %></br>
      
     <%= link_to "SIGN UP", new_employer_path, :class => "newuserinput" %>   
      
    <% end %>
    
    <% if flash[:notice] %>
      <div style="color:white;">
        <p class="center notice"><%= flash[:notice] %></p>
        <p class="center notice">- OR -</p>
        <div class="buttonadd">
        </div>
         <% end %>